<! doctype html>
<html>
    <head>
        <title>Compose</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    </head>

    <style>
        body {
            background-color: rgba(110, 245, 69, 0.925);
            padding: 80px;
        }
        form {
            padding-right: 300px;
            padding-left: 300px;
        }
    </style>

    <body>
        <div class="container">
            <form method="POST" action="/sendmessage">
                <h1>Compose</h1>
                
                <div class="form-group">
                  <label>Reciepient User Name</label>
                  <input type="text" class="form-control" name="recievername" placeholder="Enter reciever name">
                </div>

                <div class="form-group">
                  <label>message subject</label>
                  <input type="text" class="form-control" name="messagesubject" placeholder="message subject">
                </div>
                
                <div class="form-group">
                    <label>message text</label>
                    <textarea type="text" class="form-control" name="messagetext" placeholder="message text" rows="10"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/inbox" class="btn btn-default">Go back to inbox</a>
              </form>
        </div>
    </body>
</html>